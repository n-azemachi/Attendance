<h1 class="text-center">勤怠表</h1>
<div class="main-wrapper">
  <div class="main-table">
   <table class="table table-bordered">
  <thead class="heading">
    <tr>
      <th>編集</th>
      <th>区分</th>
      <th>日付</th>
      <th>開始</th>
      <th>終了</th>
    </tr>
  </thead>
  </table>
 </div>
 
  <%  @time_cards.each do |t| %>
  <div class="main-table">
  <table class="table table-borderd">
  <tbody>
    <tr>
      <td class="btn btn-success"><%= link_to "編集", time_cards_path(@time_card) %></td>
      <td><%= t.division %></td>
      <td><%= t.day %></td>
      <td><%= t.starttime.strftime('%H:%M') %></td>
      <td><%= t.endtime.strftime('%H:%M') %></td>
      <td><%= link_to '削除', time_card_path(t), method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: "btn btn-danger"%></td>
    </tr>
  </tbody>
</table>
</div>
<% end %>
</div>


<h1 class="text-center">Listing TimeCards</h1>

<%= form_for(@time_card) do |f| %>
  <% if @time_card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@time_card.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @time_card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :division %><br>
    <%= f.text_field :division, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :day %><br>
    <%= f.text_field :day, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :starttime %><br>
    <%= f.text_field :starttime, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :endtime %><br>
    <%= f.text_field :endtime, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>