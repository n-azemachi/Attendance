<div class="modal-dialog" role="document">
  <div class="modal-content">
    <%= form_with(model: @time_card, remote: true) do |f| %>

    <% if @time_card.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@time_card.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
          <% @time_card.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="modal-body">
     <div class="form-group">
    <%= f.label :division %><br>
    <%= f.text_field :division, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :day %><br>
    <%= f.date_select :day, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :starttime %><br>
    <%= f.time_select :starttime, :default => {:hour => '08', :minute => '45'}, :minute_step => 5, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :endtime %><br>
    <%= f.time_select :endtime, :default => {:hour => '17', :minute => '15'}, :minute_step => 5, class: "form-control" %>
  </div>
    </div>
    <div class="modal-footer actions">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
      <%= f.submit class: "btn btn-primary"%>
    </div>
    <% end %>
  </div>
</div>